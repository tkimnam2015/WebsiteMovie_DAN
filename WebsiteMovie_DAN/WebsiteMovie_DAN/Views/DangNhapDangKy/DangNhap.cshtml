
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@ViewBag.ThongBao
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend></legend>
        <div class="container" style="padding-top: 60px">
            <div class="row">
                <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <div class="card card-signin my-5">
                        <div class="card-body">
                            <h5 class="card-title text-center">Đăng nhập</h5>
                            <form class="form-signin">
                                <div class="form-label-group">
                                    @* <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>*@
                                    <h2>Tên đăng nhập</h2>
                                    @Html.TextBox("TenDN", null, new { @class = "form-control" })
                                    @ViewData["Loi"]
                                    @ViewData["Loi12"]

                                </div>
                                <div class="form-label-group">
                                    @*<input type="password" id="inputPassword" class="form-control" placeholder="Password" required>*@
                                    <h2>Mật khẩu</h2>
                                    @Html.Password("MatKhau", null, new { @class = "form-control" })
                                    @ViewData["Loi1"]
                                    @ViewData["Loi2"]
                                </div>
                                <div class="custom-control mb-3">
                                    <input type="checkbox" id="customCheck1">
                                    <label for="customCheck1">Nhớ mật khẩu</label>
                                </div>

                                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit" style="height:35px;font-size:12px">Đăng nhập</button>

                                <hr class="my-4">

                                <a href="~/DangNhapDangKy/DangNhapFaceBook"> <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="button" style="height:35px;font-size:12px"><i class="fab fa-facebook-f mr-2"></i>Đăng nhập bằng Facebook</button></a>
                                <div style="padding-top: 10px; margin-left: 5px;">

                                    <a style="color: #0094ff" href="~/DangNhapDangKy/DangKy">Đăng ký tài khoản</a>
                                    <a style="padding-left: 180px; color: #0094ff" href="#">Quên mật khẩu ?</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
}