@{
    ViewBag.Title = "NamLoc Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using WebsiteMovie_DAN.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<DSPhimBo>

<div class="clear_navar container" style="width: 100%; padding-top: 60px;">

    <div class="slider-container">
        <div class="slider-control left inactive"></div>
        <div class="slider-control right"></div>
        <ul class="slider-pagi"></ul>
        <div class="slider">
            @foreach (var item in ViewData["Banner1"] as List<Banner>)
            {
                <div class="slide slide-0 active">
                    <img class="slide__bg" src="~/Content/Images/@item.Img" />
                    <div class="slide__content">
                        <svg class="slide__overlay" viewBox="0 0 720 405" preserveAspectRatio="xMaxYMax slice">
                            <path class="slide__overlay-path" d="M0,0 150,0 500,405 0,405" />
                        </svg>
                        <div class="slide__text">
                            <h2 class="slide__text-heading">@item.DSPhimBo.TenPhim</h2>
                            <p class="slide__text-desc">@item.DSPhimBo.NoiDung</p>

                            <a class="slide-text-link">Xem Phim</a>
                        </div>
                    </div>
                </div>
            }
            @foreach (var item in ViewData["Banner2"] as List<Banner>)
            {
                <div class="slide slide-1 ">
                    <img class="slide__bg" src="~/Content/Images/@item.Img" />
