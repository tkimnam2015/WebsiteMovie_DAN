
@using WebsiteMovie_DAN.Models
@model List<TaiKhoan>
@{
    ViewBag.Title = "DSTaiKhoan";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-10"><h1 class="h3 mb-2 text-gray-800">Danh sách tài khoản</h1></div>
    <div class="col-2"><div style="float:right"><button type="button" class="btn btn-success">@Html.ActionLink("Thêm tài khoản", "ThemTK")</button></div></div>
</div>
<br />
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Tài khoản</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên đăng nhập</th>
                        <th>Mật khẩu</th>
                        <th>Quyền truy cập</th>
                        <th>Email</th>
                        <th style="text-align: center">Chức năng</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Tên đăng nhập</th>
                        <th>Mật khẩu</th>
                        <th>Quyền truy cập</th>
                        <th>Email</th>
                        <th style="text-align: center">Chức năng</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TenDN</td>
                            <td>@item.MatKhau</td>
                            <td>
                                @if (item.Quyen == true)
                                {
                                    <span>Admin</span>
                                }
                                else
                                {
                                    <span>User</span>
                                }
                            </td>
                            <td>@item.Email</td>
                            <td style="width: 14%; text-align: center">
                                <a href="@Url.Action("SuaTK", new { tendn = item.TenDN })" class="btn btn-primary btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-edit"></i>
                                    </span>
                                </a>
                                <a onclick="return ConfirmXoa()" href="@Url.Action("XoaTK", new { tendn = item.TenDN })" class="btn btn-danger btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-trash"></i>
                                    </span>
                                </a>


                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    function ConfirmXoa() {
        if (confirm("Bạn có chắc muốn xóa tài khoản này không ?"))
            return true;
        else
            return false;
    }
    FocusEvent = false;
    checked = false;
</script>



