@model WebsiteMovie_DAN.Models.DSPhimBo
@{
    ViewBag.Title = "Thêm phim bộ - Quản trị - NamLoc Movie";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("ThemPhimBo", "DSPhim", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

<fieldset>
    <legend>Thêm Phim Bộ</legend>

    <p>Tên Phim</p>
    @Html.TextBox("TenPhim", null, new { @class = "form-control" })
    <p>
        Nội dung
        @Html.TextBox("NoiDung", null, new { @class = "form-control" })
    </p>
    <p>
        Năm Phát Hành
        <div style="margin-top:3px;">
            @Html.DropDownList("NamPH", null, new { @class = "form-control" })
        </div>
    </p>
    <p>
        Thể Loại
        <div style="margin-top:3px;">
            @Html.DropDownList("IDTheLoai", null, new { @class = "form-control" })
        </div>
    </p>
    <p>
        Thời Lượng
        @Html.TextBox("ThoiLuong", null, new { @class = "form-control" })
    </p>
    <p>
        Hình
        <input type="file" name="fileupload" />
    </p>
    <p>
        Quốc Gia
        @Html.DropDownList("IDQuocGia", null, new { @class = "form-control" })
    </p>
    <p>
        Giá phim (* Miễn phí thì để trống *)
        @Html.TextBox("Gia", null, new { @class = "form-control" })
    </p>
    <p>
        <input type="submit" value="Thêm" class="btn btn-success form-control" />
    </p>
</fieldset>
}

<div>
    <button type="button" class="btn btn-secondary">@Html.ActionLink("Trờ về", "DSPhimBo")</button>
</div>

<br />

